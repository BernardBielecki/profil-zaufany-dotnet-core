@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1>Aplikacja testowa bibliteki do komunikacji z profilem zaufanym</h1>

    @if (Model.IsCertificatePresent)
    {
        <p style="color: green">Certyfikat zainstalowany</p>
    }
    else
    {
        <p style="color: red">Do poprawnego działania systemu należy wgrać certyfikat</p>
    }

    <form asp-action="Index" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Certificate" class="control-label">Plik certyfikatu</label>
            <input asp-for="Certificate" type="file" accept=".pfx,.p12" />
            <span asp-validation-for="Certificate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CertificatePassword" class="control-label">Hasło do certyfikatu</label>
            <input asp-for="CertificatePassword" type="password" class="form-control" />
            <span asp-validation-for="CertificatePassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Wgraj certyfikat" class="btn btn-default" />
        </div>
    </form>
</div>
